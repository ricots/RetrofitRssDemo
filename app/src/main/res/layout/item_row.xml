<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Bill Title"
                android:textColor="#000"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/bill_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_pub_date"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:text="Bill Description"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/bill_pub_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Date"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/bill_title"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>