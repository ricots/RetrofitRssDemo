<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:paddingBottom="-1dp"
        android:paddingTop="-1dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Bill Title"
                android:textColor="#000"
                android:textSize="25sp"/>


            <TextView
                android:id="@+id/bill_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bill_title"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:text="Bill Description"
                android:textColor="#000"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/bill_pub_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publication Date"
                android:paddingTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"

                android:layout_below="@+id/bill_description"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>